				<Option object_output="build/Release/" />
				<Option type="0" />
				<Option compiler="gcc" />
				<Compiler>
					<Add option="-O2" />
				</Compiler>
				<Linker>
					<Add option="-s" />
					<Add library="sfml-graphics" />
					<Add library="sfml-window" />
					<Add library="sfml-network" />
					<Add library="sfml-system" />
				</Linker>
				<ExtraCommands>
					<Add after="robocopy $(PROJECT_DIR)res\SFML\bin $(TARGET_OUTPUT_DIR) sfml-graphics-2.dll sfml-window-2.dll sfml-network-2.dll sfml-system-2.dll /R:0 /LOG+:$(TARGET_OBJECT_DIR)build.log" />
					<Mode after="always" />
				</ExtraCommands>
			</Target>
		</Build>
		<Compiler>
			<Add option="-Wall" />
			<Add directory="include" />
			<Add directory="res/SFML/include" />
		</Compiler>
		<Linker>
			<Add directory="lib" />
			<Add directory="res/SFML/lib" />
		</Linker>
		<Unit filename="src/main.cpp" />
		<Extensions>
			<code_completion />
			<debugger />
		</Extensions>
	</Project>
