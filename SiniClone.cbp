<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<CodeBlocks_project_file>
	<FileVersion major="1" minor="6" />
	<Project>
		<Option title="SiniClone" />
		<Option platforms="Windows;" />
		<Option pch_mode="2" />
		<Option compiler="gcc" />
		<Build>
			<Target title="Debug">
				<Option output="bin/Debug/SiniClone" prefix_auto="1" extension_auto="1" />
				<Option working_dir="run/Debug" />
				<Option object_output="build/Debug/" />
				<Option type="1" />
				<Option compiler="gcc" />
				<Compiler>
					<Add option="-g" />
				</Compiler>
				<Linker>
					<Add library="sfml-graphics-d" />
					<Add library="sfml-window-d" />
					<Add library="sfml-network-d" />
					<Add library="sfml-system-d" />
				</Linker>
				<ExtraCommands>
					<Add after="robocopy $(PROJECT_DIR)res\SFML\bin $(TARGET_OUTPUT_DIR) sfml-graphics-d-2.dll sfml-window-d-2.dll sfml-network-d-2.dll sfml-system-d-2.dll /R:0 /LOG+:$(TARGET_OBJECT_DIR)build.log" />
